# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Optional: comma-separated chat IDs allowed to use the bot.
# Leave empty to allow all chats.
ALLOWED_CHAT_IDS=

# Codex CLI binary name/path
CODEX_BIN=codex

# Optional: model override (example: gpt-5-codex)
CODEX_MODEL=

# Sandbox mode for codex exec: read-only | workspace-write | danger-full-access
CODEX_SANDBOX=workspace-write

# Working directory where Codex executes commands
CODEX_CWD=.

# Where chat -> Codex session IDs are stored
SESSIONS_FILE=.data/sessions.json

# Optional instructions prepended to every user message
SYSTEM_PROMPT=

# Max Telegram chunk size (200..4096)
MAX_REPLY_CHARS=3800

# Optional: Supabase long-term memory (messages + facts/goals)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
# Fallback key name supported for compatibility with some guides
SUPABASE_ANON_KEY=
SUPABASE_RECENT_MESSAGES=8
SUPABASE_SEMANTIC_MATCHES=5
SUPABASE_ENABLE_SEMANTIC_SEARCH=true
SUPABASE_CONTEXT_MAX_CHARS=3200

# Optional: required only for voice/audio transcription via Groq API
GROQ_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1
TRANSCRIPTION_MODEL=whisper-large-v3-turbo
